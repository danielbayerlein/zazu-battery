{
  "name": "zazu-battery",
  "version": "1.0.0",
  "description": "Zazu plugin to show information about your battery",
  "main": "src/index.js",
  "private": true,
  "scripts": {
    "lint": "standard --verbose | snazzy",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielbayerlein/zazu-battery.git"
  },
  "keywords": [
    "zazu",
    "battery"
  ],
  "author": "Daniel Bayerlein",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danielbayerlein/zazu-battery/issues"
  },
  "homepage": "https://github.com/danielbayerlein/zazu-battery#readme",
  "devDependencies": {
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "execa": "^1.0.0",
    "plist": "^3.0.1"
  },
  "jest": {
    "bail": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/*.js"
    ]
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  }
}
